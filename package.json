{
  "name": "optimism-simple-contracts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "GPL-3.0",
  "scripts": {
    "compile": "hardhat compile --show-stack-traces",
    "typechain": "typechain --target=ethers-v5 --outDir typechain './artifacts/contracts/**/*[!dbg].json'",
    "build": "yarn compile && yarn typechain",
    "test": "hardhat test ./test/*.test.ts && hardhat test ./test/*.spec.ts",
    "clean": "hardhat clean && rm -rf typechain coverage cache",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "prettier:check": "prettier --check 'contracts/**/*.sol'",
    "lint": "npx eslint --ext .js,.ts,.json --fix ./",
    "lint:check": "npx eslint --ext .js,.ts,.json ./",
    "format": "yarn prettier && yarn lint",
    "deploy": "npx hardhat run --network bsctestnet deploy/deploy.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.31",
    "hardhat": "^2.0.11",
    "husky": "4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.2",
    "typescript": "^4.2.2"
  }
}
